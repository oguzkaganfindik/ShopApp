@model List<ProductListViewModel>

<div class="row" style="margin-left: 5px; margin-bottom: 50px;">

    @if (Model.Any()) // Model.Count != 0
    {
        <main class="main bd-grid">

            @foreach (var product in Model)
            {
                <article class="card">
                    <div class="card__img">
                        <img src="~/images/products/@product.ImagePath" alt="">
                    </div>
                    <div class="card__name">
                        <p>@product.Name</p>
                    </div>
                    <div class="card__precis">
                        <a href="" class="card__icon"><ion-icon name="heart-outline"></ion-icon></a>

                        <div>
                            <span class="card__preci card__preci--before">
                                @if (product.UnitsInStock == 0)
                                {
                                    <span>Ürün Tükendi</span>
                                }
                                else if (product.UnitsInStock <= 3)
                                {
                                    <span>Son Ürünler</span>
                                }
                            </span>
                            <span class="card__preci card__preci--now">@product.UnitPrice TL</span>
                        </div>
                        <a href="" class="card__icon"><ion-icon name="cart-outline"></ion-icon></a>
                    </div>
                    <a asp-controller="Product" asp-action="Detail" asp-route-id="@product.Id" class="card__icon mt-3 btn" id="InceleButton">İncele</a>
                </article>
            }

        </main>
        <!-- ICONS -->
        <script src="https://unpkg.com/ionicons@5.0.0/dist/ionicons.js"></script>
    }
    else
    {
       <div class="alert alert-info fw-bold"> 
           <span>İlgili kategoride ürün bulunmamaktadır.</span>
       </div>
    }

</div>