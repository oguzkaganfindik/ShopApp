@model List<CategoryViewModel>

<div class="list-group list-group-flush rounded">

    <a asp-controller="" asp-action="" asp-route-categoryId="" asp-route-categoryName="" class="fw-bold list-group-item">Tüm Ürünler</a>

    @foreach (var category in Model)
    {
        <a asp-controller="" asp-action="" asp-route-categoryId="@category.Id" asp-route-categoryName="@category.Name" class="list-group-item-action list-group-item">@category.Name</a>
    }

</div>